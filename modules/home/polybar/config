;animate battery indicator/status
;ramp-capacity-0 = %{F#e31a1c o#e31a1c +o} ÔâÑ%{F-}
;ramp-capacity-1 = %{F#e31a1c o#e31a1c +o} ÔâÉ%{F-}
;ramp-capacity-2 = %{F#d7a645 o#d7a645 +o} ÔâÇ%{F-}
;ramp-capacity-3 = %{F#31a354 o#31a354 +o} ÔâÅ%{F-}
;ramp-capacity-4 = %{F#31a354 o#31a354 +o} ÔâÄ%{F-}

;animation-charging-0 = ÔâÑ
;animation-charging-1 = ÔâÉ
;animation-charging-2 = ÔâÇ
;animation-charging-3 = ÔâÅ
;animation-charging-4 = ÔâÄ

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99
format-charging = <label-charging>
format-charging-foreground = ${colors.black}
format-charging-background = ${colors.red}
format-full = <label-full>
format-full-foreground = ${colors.black}
format-full-background = ${colors.red}
format-discharging = <label-discharging>
format-discharging-foreground = ${colors.black}
format-discharging-background = ${colors.red}
label-charging = " Ôñà %percentage%% "
label-discharging =" ÔñÉ %percentage%% "
label-discharging-foreground = ${colors.black}
label-full = " ÔñÑ %percentage%% "

format-charging-underline = ${colors.red1}
format-discharging-underline = ${colors.red1}
format-full-underline = ${colors.red1}

