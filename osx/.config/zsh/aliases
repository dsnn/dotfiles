alias cat="bat"
alias vim="nvim"

# file shortcuts
alias cfc="vim ~/.config"
alias cfs="vim ~/.ssh/config"
alias cfz="vim ~/.config/zsh/.zshrc"
alias cfa="vim ~/.config/zsh/aliases"
alias cfe="vim ~/.config/zsh/exports"
alias cfg="vim ~/.gitconfig"

# shortcuts
alias h="cd ~/"
alias d="cd ~/dotfiles"
alias cf="cd ~/.config"
alias bin="cd ~/.local/bin"
alias pp="cd ~/projects"
alias b="cd ~/build"

# navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd ~"
alias cd..="cd .."

# actions
alias mv="mv -v"
alias rm="rm -i -v"
alias rmd="rm -rf"
alias cp="cp -v"
alias df="df -h"
alias mkdir="mkdir -pv"
alias rf="source ~/.zshrc"

# ansible
alias ap="ansible-playbook"
alias ad="ansible-playbook ~/dotfiles/playbooks/dotfiles.yml -K"
alias ae="ansible-vault edit ~/dotfiles/group_vars/all/secrets.yml"
alias ap='ansible-playbook'
alias av='ansible-vault'
alias al='ansible-lint'

# listing
alias l="ls -alh --color=auto"
alias la="ls -alh --color=auto"
alias ll="gls -alh --color=auto --format=horizontal "
alias ls="gls -h --group-directories-first --color=auto"

# git
alias g="git"
alias ga="git add ."
alias gc="git commit -m"
alias gd="git diff"
alias gpl="git pull"
alias gl="git ls"
alias gp="git push origin master"
alias gpf="git push --force-with-lease"
alias gs="git st"
alias cb="git cb"
alias gam="git commit --amend --no-edit"
alias lzg="lazygit"

# npm
alias ns="npm start"
alias ni="npm install"
alias nt="npm test"
alias ntu="npm run test:update-snapshot"
alias nrw="npm run workbench"
alias nrt="npm run typecheck"
alias nrl="npm run lint"

# wget
alias wget=''wget --hsts-file="~/.config/wget"/wget-hsts''
